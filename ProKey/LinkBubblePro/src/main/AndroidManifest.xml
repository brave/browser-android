<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linkbubble.prokey" >

    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <!--
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    -->

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/application_name"
        android:theme="@android:style/Theme.Holo.Light"
        >
        <activity
            android:name="com.linkbubble.prokey.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <intent-filter android:label="@string/application_name">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="linkbubble.intent.action.PRO_ACTIVITY" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.linkbubble.prokey.ProMessengerService"
                 android:protectionLevel="signature"
                 android:exported="true">

            <intent-filter android:label="@string/application_name">
                <action android:name="linkbubble.license.PRO_SERVICE" />
            </intent-filter>

        </service>


    </application>

</manifest>
