<?xml version="1.0" encoding="utf-8"?>

<com.linkbubble.ui.CloseTabTargetView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/close_tab_target_size"
    android:layout_height="@dimen/close_tab_target_size"
    >

    <view class="com.linkbubble.ui.CloseTabTargetView$CloseAllView"
        android:id="@+id/close_all_view"
        android:layout_width="@dimen/close_tab_target_size"
        android:layout_height="@dimen/close_tab_target_size"
        android:background="@drawable/target_plate"/>

    <ImageView
        android:layout_width="@dimen/bubble_icon_size"
        android:layout_height="@dimen/bubble_icon_size"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:background="@drawable/target_plate"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/bubble_target_icon_size"
        android:layout_height="@dimen/bubble_target_icon_size"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:contentDescription="@string/content_description_close_bubble_icon"/>

</com.linkbubble.ui.CloseTabTargetView>