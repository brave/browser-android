<?xml version="1.0" encoding="utf-8"?>

<com.linkbubble.ui.TabView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/bubble_pager_item_width"
    android:layout_height="@dimen/bubble_size"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/background"
        android:background="@drawable/bubble_light"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"/>

    <!--
    <com.linkbubble.ui.ProgressIndicator
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:id="@+id/progressIndicator"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/loading_grey"/>
    -->

    <com.linkbubble.ui.ProgressIndicator
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/progressIndicator"
        android:layout_gravity="center"/>

    <org.mozilla.gecko.widget.FaviconView
        android:layout_width="@dimen/bubble_favicon_size"
        android:layout_height="@dimen/bubble_favicon_size"
        android:id="@+id/favicon"
        android:scaleType="centerInside"
        android:src="@drawable/fallback_favicon"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/back_indicator"
        android:layout_width="@dimen/back_indicator_size"
        android:layout_height="@dimen/back_indicator_size"
        android:background="@drawable/badge_shape"
        android:layout_marginLeft="@dimen/badge_margin"
        android:layout_marginRight="@dimen/badge_margin"
        android:layout_marginTop="@dimen/badge_margin"
        android:src="@drawable/ic_action_arrow_left"
        android:layout_gravity="top|left"
        android:contentDescription="@string/content_description_can_go_back"/>

</com.linkbubble.ui.TabView>